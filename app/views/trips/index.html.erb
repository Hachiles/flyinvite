<div class="container mt-5">
  <h1> My trips </h1>
  <ul>
    <% @trips.each do |trip| %>
      <li><%= link_to trip.name, trip_path(trip) %></li>
    <% end %>
  </ul>
  <% if current_user.host %>
    <div class="container mt-3 mb-3">
      <%= link_to "Create a trip", new_trip_path, class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
