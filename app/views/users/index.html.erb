<div class="row">
    <div class="col">
      <div class="card mt-5">
        <div class="card-body">
          <div class="contact-list">
            <div class="contact-list-header">
              <h2 class="float-left">My travellers</h2>
            </div>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Company</th>
                    <th scope="col">Job title</th>
                    <th scope="col">Trips</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <th table-avatar>
                        <% if user.photo.attached? %>
                          <%= cl_image_tag user.photo.key, style:"height: 80px; width: 80px; border-radius: 50%;" %>
                        <% else %>
                          <img src="https://res.cloudinary.com/hachiles/image/upload/v1606483934/avatar3_znnvez.png" style="height: 100px; width: 100px; border-radius: 50%;">
                        <% end %>
                      </th>
                      <td style="vertical-align:middle"><%= user.first_name.capitalize %> <%= user.last_name.capitalize %></td>
                      <td style="vertical-align:middle"><%= user.username %></td>
                      <td style="vertical-align:middle"><%= user.email %></td>
                      <td style="vertical-align:middle"><%= user.company %></td>
                      <td style="vertical-align:middle"><%= user.job_title %></td>
                      <% trips = UsersTrip.where(user_id: user.id) %>
                      <td style="vertical-align:middle"><%= trips.length %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div> 
        </div>
      </div>
    </div>
  </div>